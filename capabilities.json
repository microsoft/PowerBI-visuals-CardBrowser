{
  "dataRoles": [
    {
      "name": "id",
      "kind": 0,
      "displayName": "Document Id",
      "description": "Unique ID for the document"
    },
    {
      "name": "title",
      "kind": 0,
      "displayName": "Title",
      "description": "Title of the document; shown on thumbnails and in the reader"
    },
    {
      "name": "summary",
      "displayName": "Summary",
      "description": "Summary of the content; only displayed on thumbnails",
      "kind": 0
    },
    {
      "name": "content",
      "displayName": "Content",
      "description": "Full content; only displayed in the reader",
      "kind": 0
    },
    {
      "name": "imageUrl",
      "displayName": "Title Image (url)",
      "description": "Main image(s) for the document; displayed on thumbnails and in the reader",
      "kind": 0
    },
    {
      "name": "subtitle",
      "displayName": "Subtitle Fields",
      "description": "Text items to display as a subtitle",
      "kind": 0
    },
    {
      "name": "source",
      "displayName": "Source",
      "description": "Source domain for the document; shown in the reader header bar",
      "kind": 0
    },
    {
      "name": "sourceUrl",
      "displayName": "Source URL",
      "description": "Source link for the document; accessed by clicking the reader header bar",
      "kind": 0
    },
    {
      "name": "sourceImage",
      "displayName": "Source Image (url)",
      "description": "URL for an image to display in the top-right corner of the thumbnail",
      "kind": 0
    },
    {
      "name": "metadata",
      "displayName": "MetaData Fields",
      "description": "Key-value pairs for the table on the back of the cards",
      "kind": 0
    },
    {
      "name": "dummySortingField",
      "displayName": "Sorting Field",
      "description": "Field that can be used to sort the visual's data based on an arbitrary column",
      "kind": 2
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        {
          "id": {
            "max": 1
          },
          "title": {
            "max": 1
          },
          "summary": {
            "max": 1
          },
          "content": {
            "max": 1
          },
          "imageUrl": {
            "max": 4
          },
          "subtitle": {
            "max": 6
          },
          "source": {
            "max": 1
          },
          "sourceUrl": {
            "max": 1
          },
          "sourceImage": {
            "max": 1
          },
          "metadata": {
            "max": 10
          }
        }
      ],
      "categorical": {
        "categories": {
          "select": [
            {
              "bind": {
                "to": "id"
              }
            },
            {
              "bind": {
                "to": "title"
              }
            },
            {
              "bind": {
                "to": "summary"
              }
            },
            {
              "bind": {
                "to": "content"
              }
            },
            {
              "bind": {
                "to": "imageUrl"
              }
            },
            {
              "bind": {
                "to": "subtitle"
              }
            },
            {
              "bind": {
                "to": "source"
              }
            },
            {
              "bind": {
                "to": "sourceUrl"
              }
            },
            {
              "bind": {
                "to": "sourceImage"
              }
            },
            {
              "bind": {
                "to": "metadata"
              }
            }
          ],
          "dataReductionAlgorithm": {
            "window": {
              "count": 200
            }
          }
        }
      }
    }
  ],
  "objects": {
    "presentation": {
      "properties": {
        "borderStyle": {
          "displayName": "Border Style",
          "description": "Control the style of border around thumbnails and the reader header.",
          "type": {
            "enumeration": [
              {"value": "border", "displayName": "Border"},
              {"value": "flat", "displayName": "Flat"},
              {"value": "boxShadow", "displayName": "Shadow"}
            ]
          }
        },
        "dateFormat": {
          "displayName": "Date Format",
          "description": "Subtitle date format using tokens; e.g. YYYY MM DD h:mm:ss",
          "type": {
            "text": "MMM D, YYYY"
          }
        },
        "separator": {
          "displayName": "Separator",
          "description": "Character to place between subtitle fields",
          "type": {
            "text": " \u2022 "
          }
        }
      },
      "displayName": "Configuration"
    },
    "flipState": {
      "properties": {
        "enableFlipping": {
          "description": "Whether to enable card flipping",
          "displayName": "Enable Card Flipping",
          "type": {
            "bool": "true"
          }
        },
        "backFaceDefault": {
          "description": "Whether to show back face of the card by default",
          "displayName": "Backface By Default",
          "type": {
            "bool": "false"
          }
        }
      },
      "description": "Cards flipping configuration",
      "displayName": "Flip State"
    },
    "loadMoreData": {
      "properties": {
        "enabled": {
          "description": "Whether to load more data than the initial rows",
          "displayName": "Enable",
          "type": {
            "bool": "false"
          }
        },
        "limit": {
          "description": "Stop after loading this many Documents",
          "displayName": "Limit",
          "type": {
            "numeric": 500
          }
        }
      },
      "description": "Control over data loading",
      "displayName": "Load More Data"
    }
  },
  "sorting": {
    "default": {}
  },
  "suppressDefaultTitle": true,
  "supportsHighlight": true
}